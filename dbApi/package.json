{
  "name": "dbapi",
  "version": "1.0.0",
  "description": "api for users",
  "main": "index.js",
  "scripts": {
    "build": "npm install",
    "dev": "./mockDB/mongo.sh && ./mockDB/redis.sh && ./mockDB/mosquitto.sh && eval $(cat ./.env) nodemon index.js",
    "production": "eval $(cat ./enviroment/.env) node index.js",
