    "express": "^4.17.1",
    "mongoose": "^5.11.8",
    "mqtt": "^4.2.6",
    "redis": "^3.0.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^8.2.1",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.6",
    "nyc": "^15.1.0"
